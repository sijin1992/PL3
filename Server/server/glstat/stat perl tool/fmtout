LOG_STAT( string.format( "%s|%s|%d|%d|%d|%d|%d|%d|%d|%s|%s|%s", "GET_YB", $uid, $where, $num, $real, $confirm, $depleft, $realleft, $totalleft, $acc, $ip, $mmc ) )

