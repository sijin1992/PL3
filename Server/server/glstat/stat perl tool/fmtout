//设备(用户ID，终端机型，设备分辨率，所用操作系统，所用运营商，联网方式)
LOG_STAT( string.format( "%s|%s|%s|%s|%s|%s|%s", "DEVICE", $uid, $stype, $res, $os, $oper, $cntype ) )

